  "description": "A widget that displays a Spotify song, with the ability to play a 30 second preview of it.",
  "main": "lib/SPWidget.min.js",
  "scripts": {
    "build": "webpack --mode=build",
    "dev": "webpack --progress --colors --watch --mode=dev",
    "test": "mocha --compilers js:babel-core/register --colors -w ./test/*.spec.js",
    "prepublish": "npm run build"
  },
  "devDependencies": {
    "babel": "6.3.13",
